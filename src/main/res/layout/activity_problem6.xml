    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@drawable/bg_for_some_text"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtprob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/press_start_2p"
            android:text="PROBLEM #6"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtprob"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/press_start_2p"
            android:lineSpacingMultiplier="1.5"
            android:text="What is the name of the Bird in the picture?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/image_problem"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/quest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/luzon_hornbill" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_problem"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/maya"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_design"
                android:fontFamily="@font/press_start_2p"
                android:text="Maya"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <Button
                android:id="@+id/luzon"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_design"
                android:fontFamily="@font/press_start_2p"
                android:text="Luzon Hornbill"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <Button
                android:id="@+id/jungle"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_design"
                android:fontFamily="@font/press_start_2p"
                android:text="Jungle Fowl"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <Button
                android:id="@+id/straited"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_design"
                android:fontFamily="@font/press_start_2p"
                android:text="Striated Grassbird"
                android:textColor="@color/white"
                android:textSize="14dp" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>