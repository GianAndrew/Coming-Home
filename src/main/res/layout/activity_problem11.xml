    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_for_some_text"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/press_start_2p"
            android:text="PROBLEM #11"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@id/textView2">

            <TextView
                android:id="@+id/problem_ques"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/press_start_2p"
                android:lineSpacingMultiplier="1.8"
                android:padding="20dp"
                android:text="Mayari bought 2 sets of 10 pieces fishballs, 5 pieces of kwek-kwek, 10 pieces of kikiam, and 4 pieces squidballs. Also, 2 orders of samalamig. What is the total expenses if Fish ball = P1 per 2 pcs Kwek Kwek = P2.5 each Kikiam = P5 pre 4 pcs Squid ball = P10 for 4 pcs and, samalamig = P20?"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </ScrollView>

        <TextView
            android:id="@+id/p11answer"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/scroll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_design"
            android:fontFamily="@font/press_start_2p"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <TableLayout
            android:id="@+id/tableLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/p11answer"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/p11answer">


            -

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/p11b1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="1"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p11b2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="2"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p11b3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="3"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p11b4"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
