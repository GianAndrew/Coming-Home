    -

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@drawable/bg_for_some_text"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:id="@+id/problem_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/press_start_2p"
            android:text="PROBLEM #7"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/problem_ques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/problem_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/press_start_2p"
            android:lineSpacingMultiplier="1.8"
            android:text="What costs nothing but is worth everything, weighs nothing but lasts a lifetime, that one person can't own but two can share?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/p7edit"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/problem_ques"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_design"
            android:fontFamily="@font/press_start_2p"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white" />


        -

        <LinearLayout
            android:id="@+id/linear_p7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p7edit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_e"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_design"
                android:fontFamily="@font/press_start_2p"
                android:text="E"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_v"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_design"
                android:fontFamily="@font/press_start_2p"
                android:text="V"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_o"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_design"
                android:fontFamily="@font/press_start_2p"
                android:text="O"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_l"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/button_design"
                android:fontFamily="@font/press_start_2p"
                android:text="L"
                android:textColor="@color/white" />

        </LinearLayout>

        <Button
            android:id="@+id/p7submit"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/linear_p7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_design"
            android:fontFamily="@font/press_start_2p"
            android:text="Submit"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>