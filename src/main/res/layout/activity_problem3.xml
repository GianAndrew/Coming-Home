    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_for_some_text"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/press_start_2p"
            android:text="PROBLEM #3"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:fontFamily="@font/press_start_2p"
            android:lineSpacingMultiplier="1.8"
            android:text="How much will be the expenses, if Chips costs P90, Water P50, Bread P65, Sodas P125 and Candies P20?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/p3answer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/textView"
            android:layout_margin="20dp"
            android:background="@drawable/button_design"
            android:fontFamily="@font/press_start_2p"
            android:padding="10dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TableLayout
            android:id="@+id/tableLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/p3answer">




            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/p3b1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:text="1"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p3b2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="2"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p3b3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="3"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p3b4"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="4"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p3b5"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="5"
                    android:textColor="@color/white" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/p3b6"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="6"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p3b7"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="7"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p3b8"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="8"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p3b9"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="9"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p3b0"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="0"
                    android:textColor="@color/white" />

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/p3confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tableLayout3"
            android:layout_margin="20dp"
            android:background="@drawable/button_design"
            android:fontFamily="@font/press_start_2p"
            android:text="CONFIRM"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>