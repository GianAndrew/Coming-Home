    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_for_some_text"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/press_start_2p"
            android:text="PROBLEM #10"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/press_start_2p"
            android:lineSpacingMultiplier="1.5"
            android:text="What is the total amount if Product A has twice the amount of Product B. Product C costs half the amount of Product B. And Product B costs P8^2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/p10answer"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_design"
            android:fontFamily="@font/press_start_2p"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />



        <TableLayout
            android:id="@+id/tableLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/p10answer"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/p10b1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="1"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p10b2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="2"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p10b3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="3"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p10b4"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="4"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p10b5"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="5"
                    android:textColor="@color/white" />

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/p10b6"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="6"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p10b7"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="7"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p10b8"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="8"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p10b9"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="9"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/p10b0"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_design"
                    android:fontFamily="@font/press_start_2p"
                    android:padding="20dp"
                    android:text="0"
                    android:textColor="@color/white" />

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/p10confirm"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/tableLayout3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_design"
            android:fontFamily="@font/press_start_2p"
            android:text="CONFIRM"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>