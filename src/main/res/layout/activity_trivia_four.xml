    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@drawable/bg_for_some_text"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:id="@+id/trivia_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/press_start_2p"
            android:text="Trivia"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/image_trivia"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_below="@id/trivia_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/luzon_hornbill_1" />

        <TextView
            android:id="@+id/trivia_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_trivia"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/press_start_2p"
            android:lineSpacingMultiplier="1.5"
            android:text="Luzon Hornbill is a specie of hornbill that is endemic to the forests of Luzon."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/trivia_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/trivia_des"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_design"
            android:fontFamily="@font/press_start_2p"
            android:text="@string/Okay"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </RelativeLayout>


</RelativeLayout>